{
  "manifest_version": 3,
  "name": "Page Insights",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
  {
    "resources": [
      "libs/jspdf.umd.min.js",
      "libs/html2pdf.bundle.min.js",
      "icons/logo.png"
    ],
    "matches": ["<all_urls>"]
  }
],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
